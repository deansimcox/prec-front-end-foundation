extends ../layouts/main.jade

block headerIncludes

block content
	.container
		p // HEADINGS //
		h1 Heading 1
		h2 Heading 2
		h3 Heading 3
		h4 Heading 4
		h5 Heading 5
		h6 Heading 6
		hr
			
		p // LISTS //
		ul
			li Unordered list item 1
			li
				a(href="") Unordered list with link
		ol
			li Ordered list item 1
			li
				a(href="") Ordered list with link
		hr

		p // BUTTONS //
		p
			+btn('Button with default theme', 'javascript:;')(class='other-class-name')
		p
			+btn-1('Button with alt theme', 'javascript:;')(class='other-class-name')

		hr
		p // CAROUSELS //
		+carousel('{ "speed": 1500, "auto": true, "autoControls": true, "autoControlsCombine": true, "autoStart": true }')
			+carousel-slide('https://placeimg.com/960/480/nature')
				p Slide 1 title
				p
					+btn('Slide 1 CTA', 'javascript:;')
			+carousel-slide('https://placeimg.com/960/480/people')
				p test 2
			+carousel-slide('https://placeimg.com/960/480/tech')
				p test 3
			+carousel-slide('https://placeimg.com/960/480/animals')
				p test 4
			+carousel-slide('https://placeimg.com/960/480/arch')
				p test 4

		hr
		p // MODALS //
		p
			+btn('Button with modal', 'javascript:;')(class='js-modal-open')

block footerIncludes